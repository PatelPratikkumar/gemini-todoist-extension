{
  "name": "gemini-todoist-extension",
  "version": "1.4.0",
  "description": "Full Todoist integration for Gemini CLI - manage tasks, projects, sections, labels, and comments",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/server.js --bundle --platform=node --format=esm --outfile=dist/bundle.js --external:node:*",
    "start": "node dist/bundle.js",
    "dev": "tsx src/server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "gemini",
    "todoist",
    "mcp",
    "cli",
    "extension"
  ],
  "author": "",
  "license": "MIT"
}
